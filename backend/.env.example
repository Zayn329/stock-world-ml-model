# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/financial_insights
REDIS_URL=redis://localhost:6379/0

# API Keys
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key
FINANCIAL_MODELING_PREP_API_KEY=your_fmp_key
NEWS_API_KEY=your_news_api_key
TWITTER_BEARER_TOKEN=your_twitter_bearer_token

# Security
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC_SENTIMENT=sentiment_data
KAFKA_TOPIC_MARKET=market_data
KAFKA_TOPIC_NEWS=news_data

# ML Model Configuration
MODEL_PATH=./models
SENTIMENT_MODEL_NAME=finbert
HUGGINGFACE_CACHE_DIR=./cache

# Application Configuration
API_V1_PREFIX=/api/v1
PROJECT_NAME=Financial Insights Platform
VERSION=1.0.0
DEBUG=False

# CORS Settings
BACKEND_CORS_ORIGINS=["http://localhost:3000", "https://yourdomain.com"]

# Real-time Configuration
WEBSOCKET_ENABLED=True
BATCH_SIZE=32
MAX_CONNECTIONS=1000

# Monitoring
PROMETHEUS_ENABLED=True
LOG_LEVEL=INFO

# Data Sources
YAHOO_FINANCE_ENABLED=True
REDDIT_ENABLED=True
TWITTER_ENABLED=True